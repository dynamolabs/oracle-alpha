{
  "name": "oracle-alpha",
  "version": "0.1.0",
  "description": "On-chain Reliable Alpha Compilation & Learning Engine",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npx ts-node --transpile-only src/api/server.ts",
    "dev": "npx ts-node --transpile-only src/api/server.ts",
    "demo": "DEMO_MODE=true DEMO_SIGNALS_PER_MINUTE=4 npx ts-node --transpile-only src/api/server.ts",
    "scan": "npx ts-node --transpile-only src/cli.ts scan",
    "status": "npx ts-node --transpile-only src/cli.ts status",
    "leaderboard": "npx ts-node --transpile-only src/cli.ts leaderboard",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:onchain": "ts-node --transpile-only scripts/test-onchain.ts",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "deploy": "anchor deploy --provider.cluster devnet",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky",
    "test:integration": "bash scripts/integration-test.sh",
    "docker:build": "docker build -t oracle-alpha .",
    "docker:run": "docker-compose up -d"
  },
  "keywords": [
    "solana",
    "ai",
    "trading",
    "signals",
    "oracle"
  ],
  "author": "ShifuSensei",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.0",
    "@types/uuid": "^10.0.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "compression": "^1.8.1",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "node-fetch": "^3.3.0",
    "ora": "^5.4.1",
    "uuid": "^13.0.0",
    "ws": "^8.14.0",
    "zod": "^3.22.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
